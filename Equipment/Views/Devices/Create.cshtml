@model Equipment.Models.Device

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Device</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.DeviceManufacturer, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DeviceManufacturer)
                @Html.ValidationMessageFor(model => model.DeviceManufacturer)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DeviceName, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DeviceName)
                @Html.ValidationMessageFor(model => model.DeviceName)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DeviceSerialNumber, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DeviceSerialNumber)
                @Html.ValidationMessageFor(model => model.DeviceSerialNumber)
            </div>
        </div>
        
        <div class="form-group">
            @Html.LabelFor(model => model.DeviceUser, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.DeviceUser)
                @Html.ValidationMessageFor(model => model.DeviceUser)
            </div>
            
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
